<?xml version="1.0"?>
<config>
    <modules>
        <Che_Blog>
            <version>1.0.0</version>
        </Che_Blog>
    </modules>
    <frontend>
        <routers>
            <blog>
                <use>standard</use>
                <args>
                    <module>Che_Blog</module>
                    <frontName>blog</frontName>
                </args>
            </blog>
        </routers>
        <layout>
            <updates>
                <blog>
                    <file>blog.xml</file>
                </blog>
            </updates>
        </layout>
    </frontend>
    <global>
        <helpers>
            <blog>
                <class>Che_Blog_Helper</class>
            </blog>
        </helpers>
        <models>
            <blog>
                <class>Che_Blog_Model</class>
                <resourceModel>blog_resource</resourceModel>
            </blog>
            <blog_resource>
                <class>Che_Blog_Model_Resource</class>
                <entities>
                    <post>
                        <table>post</table>
                    </post>
                    <category>
                        <table>category</table>
                    </category>
                </entities>
            </blog_resource>
        </models>
        <blocks>
            <blog>
                <class>Che_Blog_Block</class>
            </blog>
        </blocks>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <blog before="Mage_Adminhtml">Che_Blog_Adminhtml</blog>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

</config>